@model MenBytes.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";

    Layout = "~/Views/Shared/_LayoutPageClient.cshtml";
}

<div id="content"></div>

<!-- PAGES INNER -->
<section class="chart-page login gray-bg padding-top-100 padding-bottom-100">
    <div class="container">

        <!-- Payments Steps -->
        <div class="shopping-cart">

            <!-- SHOPPING INFORMATION -->
            <div class="cart-ship-info">
                <div class="row">

                    <!-- Login Register -->
                    <div class="col-sm-7 center-block">



                        <!-- Nav Tabs -->
                        <ul class="nav" id="myTab" role="tablist">
                            <li> <h2>@ViewBag.Title</h2></li>

                        </ul>

                        <!-- Login Register Inside -->
                        <div class="tab-content" id="myTabContent">

                            <!-- Login -->
                            <div class="tab-pane fade show active" id="log" role="tabpanel" aria-labelledby="login-tab">

                                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken();
                                    @Html.HiddenFor(model => model.Code)

                                    <ul class="row">

                                        <!-- Name -->
                                        <li class="col-md-12">

                                            <label>
                                                Email Address *
                                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                            </label>
                                        </li>
                                        <!-- LAST NAME -->
                                        <li class="col-md-12">
                                            <label>
                                                Password *
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                            </label>
                                        </li>
                                        <!-- LAST NAME -->
                                        <li class="col-md-12">
                                            <label>
                                                Confirm Password *
                                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                            </label>

                                        </li>

                                        <!-- LOGIN -->
                                        <li class="col-md-6">
                                            <button type="submit" class="btn">Reset</button>
                                        </li>
                                        <li class="col-md-6">
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </li>

                                        <!-- FORGET PASS -->
                                        @*<li class="col-md-6">
                    <div class="margin-top-15 text-right"> <a id="login-tab" data-toggle="tab" href="#log" role="tab" aria-selected="true">Login</a> </div>
                </li>*@

                                        <!-- FORGET PASS -->
                                        <li class="col-md-6">
                                        </li>
                                        <!-- FORGET PASS -->
                                        <li class="col-md-6">
                                            <div class="margin-top-15 text-right">  @Html.ActionLink("Forgot your password?", "ForgotPassword") </div>
                                        </li>
                                    </ul>
                                }

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


