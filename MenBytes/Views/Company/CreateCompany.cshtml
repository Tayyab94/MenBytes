                                @*<input type="text" name="Name" class="form-control" id="companyName" placeholder="Company's Name">*@
                                
                               @Html.TextBoxFor(x=>x.CompanyName,new {@class= "form-control", id= "companyName", placeholder = "Company's Name" })

                                @Html.ValidationMessageFor(model => model.CompanyName,"",new {@class = "text-danger"})

                            </div>

                        </div>

                        <button class="btn btn-primary" id="btnSave" type="submit" style="margin-top: 10px">Savev Company</button>
                    
                    }
