@using MenBytes.Models.ViewModels

@{
    ViewBag.Title = "Thankyou";
    Layout = "~/Views/Shared/_LayoutPageClient.cshtml";
}


@section CustomrCss{

    <link href="~/AdminSide/html/dist/OrderdetailRecipt.css" rel="stylesheet" />

}



<div id="content">

    <!-- History -->
    <section class="history-block padding-top-100 padding-bottom-100">
        <div class="container">
            <div class="about-us-con">
                @*col-xs-offset-1 col-sm-offset-1 col-md-offset-3*@
                <div class="row">
                    <div class="col-xs-10 col-sm-10 col-md-3"></div>
                    <div class="well col-xs-10 col-sm-10 col-md-6 printablDiv">
                      
                        <div class="row" style="margin-top: 11px;">

                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <address>
                                    <strong>MenBytes.com</strong>
                                    <br>
                                    Gujrwanwal
                                    <br>
                                    Alipu Chowk, Rawalpindi Bypass
                                    <br>
                                    <abbr title="Phone">Phone:</abbr> (+92) 336-49978771
                                </address>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                                <p>
                                    Date: <em>@DateTime.Now.Date.ToString("d")</em>
                                </p>

                            </div>
                        </div>
                        <div class="row">
                            <span class="center-block">

                                <img src="~/clientHtml/images/SiteImages/ReciptLogo.jpg" alt="allytees-500-trans.png" />

                            </span>
                            <table class="table table-hover table-borderless">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>#</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in ViewBag.ShoppingCartList as List<CartVM>)
                                    {

                                        <tr>
                                            <td class="col-md-9"><em>@item.ProductName</em></td>
                                            <td class="col-md-1" style="text-align: center">@item.Quantity</td>
                                            <td class="col-md-1 text-center">PKR- @item.Price</td>
                                            <td class="col-md-1 text-center">PKR- @(item.Price * item.Quantity)</td>
                                        </tr>
                                    }

                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td class="text-right"><h4><strong>Total: </strong></h4></td>
                                        <td class="text-center text-danger"><h4><strong>PKR- @ViewBag.grandTotal</strong></h4></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div>
                                <h1 style="text-align:center;">
                                    Thank you for your order.
                                </h1>
                                <button type="button" id="printbutton" class="btn btn-small right d-print-none" title="Print the Challan form">Print Challan</button>
                              
                                <a href="@Url.Action("Index","ClientSide")" class="btn btn-small d-print-none" title="Home Page">Go to Home</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>


@section scripts{
    <script src="~/AdminSide/html/dist/JavaScriptPrint/printThis.js"></script>
 
    <script type="text/javascript">

        $(document).ready(function () {

        
            $("#printbutton").click(function (e) {

            
                e.preventDefault();
                $('.printablDiv').printThis();
            })
        });

     
    </script>
}


