@model MenBytes.Models.MenBytesModels.Order

@using (Html.BeginForm()) 
{
  
    <div class="modal-body">
      @*@Html.HiddenFor(x=>x.Id)*@
      
      <div class="form-group">
          @Html.Label("Status",htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-10">
              @Html.DropDownListFor(model => model.orderStatusID, ViewBag.StatusList as SelectList,new {@class="form-control"})
          </div>
      </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="button" data-id="@Model.Id" class="btn btn-primary">Save changes</button>
    </div>

}

