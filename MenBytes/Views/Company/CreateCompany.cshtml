</div> <!-- Row -->
<div class="row">
    <div class="col-xl-12">
        <section class="hk-sec-wrapper">
            <div class="row">
                <div class="col-sm">
                    
                    @using (Html.BeginForm("CreateCompany", "Company"))
                    {
                        <div class="form-row">
                            <div class="col-md-12 mb-12">
