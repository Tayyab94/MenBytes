@model IEnumerable<MenBytes.Models.ViewModels.CartVM>


@if (Model == null || Model.Count()<0)
{
<h4 class="text-danger">@ViewBag.Message</h4>
}
else
{
 foreach (var item in Model)
 {
     <li>
         <div class="media-left">
             <div class="cart-img"> <a href="#"> <img class="media-object img-responsive" src="@Url.Content(item.ProductImage)" alt="..." > </a> </div>
         </div>
         <div class="media-body">
             <h6 class="media-heading" style="font-size: smaller">@(item.ProductName.Length>10 ? item.ProductName.Substring(0, 10).ToString():item.ProductName)</h6>
             <span class="price">@item.Price PKR</span> <span class="qty">QTY: @item.Quantity</span>
         </div>
     </li>
 }
    <li>
        <h5 class="text-left">SUBTOTAL: <small> @ViewBag.GrandTotal PKR </small></h5>
    </li>
    <li class="margin-0">
        <div class="row">
            <div class="col-sm-6"> <a href="/Cart/Index" class="btn">VIEW CART</a></div>
        </div>
    </li>
}

